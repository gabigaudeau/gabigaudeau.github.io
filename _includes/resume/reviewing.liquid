<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign reviewing = data[1] | sort: 'year' | reverse %}
  {% for content in reviewing %}
      <div class="row">
        <ul>
          <li>
            <h6 class="title ml-1 ml-md-4">
              {{ content.role }} for <b class="font-weight-bold"><a href="{{ content.url }}"">{{ content.event }} {{ content.year }}</a></b>.
            </h6>
          </li>
        </ul>
    </div>
  {% endfor %}
</ul>
