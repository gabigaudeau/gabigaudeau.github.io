<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in publications %}
    <div class="row">
      <ul>
        <li>
          {% if content.pdf %}
            <h6 class="title ml-1 ml-md-4">
              <b class="font-weight-bold">{{ content.name }}</b>, {{ content.authors }}, {{ content.releaseDate }},
              <i `class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.publisher }}</i>,
              <a href="{{ content.pdf }}">pdf</a>, <a href="{{ content.bib }}">bib</a>
            </h6>
          {% else %}
            <h6 class="title ml-1 ml-md-4">
              <b class="font-weight-bold">{{ content.name }}</b>, {{ content.authors }}, {{ content.releaseDate }},
              <i `class="ml-1 ml-md-4" style="font-size: 0.95rem; font-style: italic">{{ content.publisher }}</i>
            </h6>
          {% endif %}
        </li>
      </ul>
    </div>
  {% endfor %}
</ul>
